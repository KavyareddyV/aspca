<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Box_Link_Validation</fullName>
    <active>true</active>
    <description>The url should start with https:// or http://</description>
    <errorConditionFormula>NOT(BEGINS(&apos;http&apos;, Protocol_Box_Link__c))</errorConditionFormula>
    <errorDisplayField>Protocol_Box_Link__c</errorDisplayField>
